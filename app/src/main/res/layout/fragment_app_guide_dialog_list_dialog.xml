<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom_sheet_layout"
        style="@style/ThemeOverlay.Material3.BottomSheetDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:layout_marginHorizontal="@dimen/header_card_text_margin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_guide"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginVertical="@dimen/header_card_text_margin"
            android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/app_guide_horizontal_margin"
        android:layout_marginVertical="@dimen/app_guide_vertical_margin"
        android:orientation="horizontal"
        android:padding="@dimen/app_guide_padding">

        <ImageView
            android:layout_width="@dimen/app_guide_icon"
            android:layout_height="@dimen/app_guide_icon"
            android:contentDescription="@string/current_location"
            android:src="@drawable/user_maker" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="3dp"
            android:layout_weight="1"
            android:text="@string/your_current_location"
            android:textAppearance="?attr/textAppearanceTitleSmall" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/app_guide_horizontal_margin"
        android:layout_marginVertical="@dimen/app_guide_vertical_margin"
        android:orientation="horizontal"
        android:padding="@dimen/app_guide_padding">

        <ImageView
            android:layout_width="@dimen/app_guide_icon"
            android:layout_height="@dimen/app_guide_icon"
            android:contentDescription="@string/fast_station"
            android:src="@drawable/blue_marker" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="3dp"
            android:layout_weight="1"
            android:text="@string/fast_station_"
            android:textAppearance="?attr/textAppearanceTitleSmall" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/app_guide_horizontal_margin"
        android:layout_marginVertical="@dimen/app_guide_vertical_margin"
        android:orientation="horizontal"
        android:padding="@dimen/app_guide_padding">

        <ImageView
            android:layout_width="@dimen/app_guide_icon"
            android:layout_height="@dimen/app_guide_icon"
            android:contentDescription="@string/nearest_slow_station"
            android:src="@drawable/red_marker" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/slow_station_"
            android:layout_gravity="center"
            android:textAppearance="?attr/textAppearanceTitleSmall" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/app_guide_horizontal_margin"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/app_guide_vertical_margin"
        android:layout_marginBottom="@dimen/header_card_text_margin"
        android:padding="@dimen/app_guide_padding">

        <LinearLayout
            android:layout_width="@dimen/app_guide_icon"
            android:layout_height="@dimen/app_guide_icon"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="AB"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/station_code"
                android:textAppearance="?attr/textAppearanceTitleSmall" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>